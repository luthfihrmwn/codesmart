    <!-- Scripts -->
    <script src="/src/js/auth.js"></script>
    <script src="/src/js/api-service.js"></script>
    <script src="/src/js/notification-service.js"></script>
    <script src="/src/js/notification-bell.js"></script>
    <script src="/src/js/modal-service.js"></script>
    <script src="/src/js/user-profile-loader.js"></script>
    <script>
        let discussions = [];
        let modules = [];
        let currentDiscussion = null;

        // Initialize
        async function init() {
            try {
                console.log('üöÄ Initializing discussions page...');
                console.log('DOM ready state:', document.readyState);

                // Check authentication
                if (!authService || !authService.isLoggedIn()) {
                    console.warn('‚ö†Ô∏è User not logged in, redirecting...');
                    window.location.href = '/src/pages/auth/login.html';
                    return;
                }

                // Load modules in parallel, don't wait for it
                loadModules().catch(err => console.error('Modules load failed:', err));

                // Load discussions immediately
                await loadDiscussions();

                // Setup event listeners
                setupEventListeners();

                // Set user info
                setUserInfo();

                console.log('‚úÖ Initialization complete');
            } catch (error) {
                console.error('‚ùå Fatal error during initialization:', error);
                // Still try to show empty state even if init fails
                const container = document.getElementById('discussionsList');
                if (container) {
                    container.innerHTML = `
                        <div class="empty-state">
                            <i class='bx bx-error'></i>
                            <h3>Error Loading Page</h3>
                            <p>Failed to initialize discussions page: ${error.message}</p>
                            <button class="btn-primary" onclick="location.reload()" style="margin-top: 20px; padding: 10px 20px; border: none; border-radius: 8px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; cursor: pointer; font-size: 14px;">
                                <i class='bx bx-refresh'></i> Reload Page
                            </button>
                        </div>
                    `;
                }
            }
        }
        // Load modules
        async function loadModules() {
            try {
                console.log('Loading modules...');
                const response = await fetch('http://localhost:5000/api/v1/modules', {
                    headers: {
                        'Authorization': `Bearer ${localStorage.getItem('codesmart_token') || localStorage.getItem('token')}`
                    }
                });
                const data = await response.json();
                console.log('Modules response:', data);

                if (data.success) {
                    modules = data.data.modules || data.data || [];
                    console.log('Loaded modules:', modules.length);
                    renderModuleFilter();
                }
            } catch (error) {
                console.error('Error loading modules:', error);
            }
        }

        // Render module filter
        function renderModuleFilter() {
            const filterModule = document.getElementById('filterModule');
            modules.forEach(module => {
                const option = document.createElement('option');
                option.value = module.id;
                option.textContent = `${module.name} (${module.level.toUpperCase()})`;
                filterModule.appendChild(option);
            });
        }

        // Load discussions
        async function loadDiscussions() {
            try {
                console.log('üì° [loadDiscussions] Starting...');

                const filterModuleEl = document.getElementById('filterModule');
                const filterAssignmentEl = document.getElementById('filterAssignment');

                const moduleId = filterModuleEl ? filterModuleEl.value : '';
                const assignmentId = filterAssignmentEl ? filterAssignmentEl.value : '';

                const params = new URLSearchParams();
                if (moduleId) params.append('module_id', moduleId);
                if (assignmentId) params.append('assignment_id', assignmentId);

                const token = localStorage.getItem('codesmart_token') || localStorage.getItem('token');
                const url = `http://localhost:5000/api/v1/discussions?${params}`;

                console.log('üì° [loadDiscussions] API Call:', {
                    url,
                    hasToken: !!token,
                    tokenPreview: token ? token.substring(0, 20) + '...' : 'NO TOKEN'
                });

                if (!token) {
                    throw new Error('No authentication token found');
                }

                const response = await fetch(url, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                console.log('üì° [loadDiscussions] Response:', response.status, response.statusText);

                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }

                const data = await response.json();
                console.log('üì° [loadDiscussions] Data received:', {
                    success: data.success,
                    dataType: Array.isArray(data.data) ? 'array' : typeof data.data,
                    count: Array.isArray(data.data) ? data.data.length : 0
                });

                if (data.success && Array.isArray(data.data)) {
                    discussions = data.data;
                    console.log('‚úÖ [loadDiscussions] Loaded', discussions.length, 'discussions');
                    if (discussions.length > 0) {
                        console.log('üìù [loadDiscussions] Sample:', discussions[0].title);
                    }
                    updateStats();
                    applyFilters();
                } else {
                    console.warn('‚ö†Ô∏è [loadDiscussions] Invalid response:', data);
                    discussions = [];
                    updateStats();
                    renderEmptyState();
                }
            } catch (error) {
                console.error('‚ùå [loadDiscussions] Error:', error.message);
                console.error('‚ùå [loadDiscussions] Stack:', error.stack);
                discussions = [];
                updateStats();
                renderEmptyState();
            }
        }

        // Update stats with real data
        function updateStats() {
            try {
                const totalTopics = discussions.length;
                const activeTopics = discussions.filter(d => !d.is_solved && !d.is_locked).length;
                const resolvedTopics = discussions.filter(d => d.is_solved).length;

                // Count replies by current user (if user_id field exists in replies)
                const currentUser = authService.getCurrentUser();
                let myRepliesCount = 0;

                if (currentUser) {
                    discussions.forEach(d => {
                        if (d.replies && Array.isArray(d.replies)) {
                            myRepliesCount += d.replies.filter(r =>
                                r.user_id === currentUser.id || r.author_id === currentUser.id
                            ).length;
                        }
                    });
                }

                // Update UI
                document.getElementById('totalTopics').textContent = totalTopics;
                document.getElementById('activeTopics').textContent = activeTopics;
                document.getElementById('resolvedTopics').textContent = resolvedTopics;
                document.getElementById('myReplies').textContent = myRepliesCount;
            } catch (error) {
                console.error('Error updating stats:', error);
            }
        }

        // Apply filters
        function applyFilters() {
            try {
                console.log('üîç [applyFilters] Starting with', discussions.length, 'discussions');

                const filterStatusEl = document.getElementById('filterStatus');
                const searchInputEl = document.getElementById('searchInput');

                const filterStatus = filterStatusEl ? filterStatusEl.value : '';
                const searchTerm = searchInputEl ? searchInputEl.value.toLowerCase() : '';

                console.log('üîç [applyFilters] Filters:', { filterStatus, searchTerm });

                let filtered = [...discussions];

                if (filterStatus === 'pinned') {
                    filtered = filtered.filter(d => d.is_pinned);
                } else if (filterStatus === 'solved') {
                    filtered = filtered.filter(d => d.is_solved);
                } else if (filterStatus === 'unsolved') {
                    filtered = filtered.filter(d => !d.is_solved);
                } else if (filterStatus === 'locked') {
                    filtered = filtered.filter(d => d.is_locked);
                }

                if (searchTerm) {
                    filtered = filtered.filter(d =>
                        (d.title && d.title.toLowerCase().includes(searchTerm)) ||
                        (d.content && d.content.toLowerCase().includes(searchTerm))
                    );
                }

                console.log('‚úÖ [applyFilters] Filtered to', filtered.length, 'discussions');
                renderDiscussions(filtered);
            } catch (error) {
                console.error('‚ùå [applyFilters] Error:', error.message);
                renderEmptyState();
            }
        }

        // Render discussions
        function renderDiscussions(data) {
            try {
                console.log('üìù [renderDiscussions] Starting with', data ? data.length : 0, 'items');

                const container = document.getElementById('discussionsList');
                if (!container) {
                    console.error('‚ùå [renderDiscussions] discussionsList container not found!');
                    return;
                }

                if (!Array.isArray(data)) {
                    console.error('‚ùå [renderDiscussions] Data is not an array:', typeof data);
                    renderEmptyState();
                    return;
                }

                if (data.length === 0) {
                    console.log('‚ÑπÔ∏è [renderDiscussions] No discussions to display, showing empty state');
                    renderEmptyState();
                    return;
                }

                console.log('‚úÖ [renderDiscussions] Rendering', data.length, 'discussions...');

                const html = data.map((discussion, index) => {
                    try {
                        return `
                            <div class="discussion-item" onclick="showDiscussionDetail(${discussion.id})">
                                <i class='bx ${getDiscussionIcon(discussion)} discussion-icon ${getDiscussionClass(discussion)}'></i>
                                <div class="discussion-content">
                                    <div class="discussion-header">
                                        <h3 class="discussion-title">${discussion.title || 'Untitled'}</h3>
                                        <div class="discussion-badges">
                                            ${discussion.is_pinned ? '<span class="badge pinned"><i class="bx bxs-pin"></i> Pinned</span>' : ''}
                                            ${discussion.is_solved ? '<span class="badge solved"><i class="bx bx-check-circle"></i> Solved</span>' : ''}
                                            ${discussion.is_locked ? '<span class="badge locked"><i class="bx bx-lock"></i> Locked</span>' : ''}
                                        </div>
                                    </div>
                                    <p class="discussion-preview">${(discussion.content || '').substring(0, 150)}...</p>
                                    <div class="discussion-meta">
                                        <span><i class='bx bx-user'></i> ${discussion.author_name || 'Unknown'}</span>
                                        <span><i class='bx bx-time'></i> ${formatDate(discussion.created_at)}</span>
                                        <span><i class='bx bx-comment'></i> ${discussion.replies_count || 0} replies</span>
                                        <span><i class='bx bx-show'></i> ${discussion.views_count || 0} views</span>
                                    </div>
                                </div>
                            </div>
                        `;
                    } catch (err) {
                        console.error(`‚ùå [renderDiscussions] Error rendering discussion ${index}:`, err);
                        return '';
                    }
                }).join('');

                container.innerHTML = html;
                console.log('‚úÖ [renderDiscussions] Successfully rendered to DOM');
            } catch (error) {
                console.error('‚ùå [renderDiscussions] Fatal error:', error.message);
                renderEmptyState();
            }
        }

        // Get discussion icon
        function getDiscussionIcon(discussion) {
            if (discussion.is_pinned) return 'bxs-pin';
            if (discussion.is_locked) return 'bx-lock';
            if (discussion.is_solved) return 'bx-check-circle';
            return 'bx-message-square-dots';
        }

        // Get discussion class
        function getDiscussionClass(discussion) {
            if (discussion.is_pinned) return 'pinned';
            if (discussion.is_locked) return 'locked';
            if (discussion.is_solved) return 'solved';
            return '';
        }

        // Render empty state
        function renderEmptyState() {
            const container = document.getElementById('discussionsList');
            container.innerHTML = `
                <div class="empty-state">
                    <i class='bx bx-message-square-x'></i>
                    <h3>Belum Ada Diskusi</h3>
                    <p>Data diskusi belum tersedia saat ini.</p>
                    <p>Diskusi dari siswa akan muncul di sini.</p>
                    <button class="btn-primary" onclick="location.reload()" style="margin-top: 20px; padding: 10px 20px; border: none; border-radius: 8px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; cursor: pointer; font-size: 14px;">
                        <i class='bx bx-refresh'></i> Refresh Halaman
                    </button>
                </div>
            `;
        }

        // Show discussion detail - redirect to WhatsApp-style page
        window.showDiscussionDetail = function(id) {
            window.location.href = `discussion-detail.html?id=${id}`;
        };

        // Render discussion detail
        function renderDiscussionDetail(discussion) {
            const detail = document.getElementById('discussionDetail');
            detail.innerHTML = `
                <div class="detail-header">
                    <div style="margin-bottom: 1rem;">
                        ${discussion.is_pinned ? '<span class="badge pinned"><i class="bx bxs-pin"></i> Pinned</span>' : ''}
                        ${discussion.is_solved ? '<span class="badge solved"><i class="bx bx-check-circle"></i> Solved</span>' : ''}
                        ${discussion.is_locked ? '<span class="badge locked"><i class="bx bx-lock"></i> Locked</span>' : ''}
                    </div>
                    <h2 class="detail-title">${discussion.title}</h2>
                    <div class="detail-meta">
                        <span><i class='bx bx-user'></i> ${discussion.author_name}</span>
                        <span><i class='bx bx-time'></i> ${formatDate(discussion.created_at)}</span>
                        <span><i class='bx bx-show'></i> ${discussion.views_count || 0} views</span>
                    </div>
                    <div class="detail-actions">
                        <button class="btn-action ${discussion.is_pinned ? 'active' : ''}" onclick="togglePin(${discussion.id})">
                            <i class='bx bxs-pin'></i> ${discussion.is_pinned ? 'Unpin' : 'Pin'}
                        </button>
                        <button class="btn-action ${discussion.is_locked ? 'active' : ''}" onclick="toggleLock(${discussion.id})">
                            <i class='bx bx-lock'></i> ${discussion.is_locked ? 'Unlock' : 'Lock'}
                        </button>
                        <button class="btn-action" onclick="closeDiscussionModal()">
                            <i class='bx bx-x'></i> Close
                        </button>
                    </div>
                </div>

                <div class="discussion-body">${discussion.content}</div>

                <div class="replies-section">
                    <h3 class="replies-header">
                        <i class='bx bx-comment'></i> ${discussion.replies ? discussion.replies.length : 0} Replies
                    </h3>
                    <div>
                        ${discussion.replies && discussion.replies.length > 0 ? renderReplies(discussion.replies) : '<p style="color: #9ca3af; text-align: center; padding: 2rem;">No replies yet</p>'}
                    </div>
                </div>

                ${!discussion.is_locked ? `
                    <div class="modern-reply-form">
                        <div class="reply-form-header">
                            <div class="reply-avatar-small">üë®‚Äçüè´</div>
                            <span class="reply-as-text">Replying as <strong>Assessor</strong></span>
                        </div>
                        <div class="reply-input-container">
                            <textarea
                                id="replyContent"
                                placeholder="Type your reply here... (You can use Markdown formatting)"
                                rows="4"
                            ></textarea>
                            <div class="reply-toolbar">
                                <div class="toolbar-left">
                                    <button class="toolbar-btn" onclick="insertMarkdown('**', '**')" title="Bold">
                                        <i class='bx bx-bold'></i>
                                    </button>
                                    <button class="toolbar-btn" onclick="insertMarkdown('*', '*')" title="Italic">
                                        <i class='bx bx-italic'></i>
                                    </button>
                                    <button class="toolbar-btn" onclick="insertMarkdown('\`\`\`\\n', '\\n\`\`\`')" title="Code Block">
                                        <i class='bx bx-code-alt'></i>
                                    </button>
                                    <label class="toolbar-checkbox">
                                        <input type="checkbox" id="markAsSolution">
                                        <span><i class='bx bx-check-circle'></i> Mark as Solution</span>
                                    </label>
                                </div>
                                <button class="btn-send-reply" onclick="submitReply()">
                                    <i class='bx bx-send'></i> Send Reply
                                </button>
                            </div>
                        </div>
                    </div>
                ` : '<p style="color: #9ca3af; text-align: center; padding: 2rem; background: #f9fafb; border-radius: 0.8rem; margin-top: 2rem;"><i class="bx bx-lock"></i> This discussion is locked</p>'}
            `;
        }

        // Render replies
        function renderReplies(replies) {
            return replies.map(reply => {
                const isAssessor = reply.user_role === 'assessor' || reply.author_role === 'assessor';
                return `
                <div class="chat-reply-item ${isAssessor ? 'assessor-reply' : 'student-reply'} ${reply.is_solution ? 'solution' : ''}">
                    <div class="chat-reply-avatar">
                        <div class="avatar-circle ${isAssessor ? 'assessor' : 'student'}">
                            ${isAssessor ? 'üë®‚Äçüè´' : 'üë®‚Äçüéì'}
                        </div>
                    </div>
                    <div class="chat-reply-content">
                        <div class="chat-reply-header">
                            <div class="chat-author-info">
                                <span class="chat-author-name">${reply.user_name || reply.author_name || 'Unknown'}</span>
                                <span class="chat-author-role ${isAssessor ? 'assessor' : 'student'}">
                                    ${isAssessor ? 'üéì Assessor' : 'üë®‚Äçüéì Student'}
                                </span>
                                ${reply.is_solution ? '<span class="badge-solution"><i class="bx bx-check-circle"></i> Solution</span>' : ''}
                            </div>
                            <span class="chat-reply-time">
                                <i class='bx bx-time-five'></i> ${formatDate(reply.created_at)}
                            </span>
                        </div>
                        <div class="chat-reply-body">${reply.content}</div>
                        ${!reply.is_solution ? `
                            <div class="chat-reply-actions">
                                <button class="btn-chat-action" onclick="markReplyAsSolution(${reply.id})">
                                    <i class='bx bx-check-circle'></i> Mark as Solution
                                </button>
                                <button class="btn-chat-action" onclick="likeReply(${reply.id})">
                                    <i class='bx bx-like'></i> ${reply.likes_count || 0}
                                </button>
                            </div>
                        ` : ''}
                    </div>
                </div>
            `;
            }).join('');
        }

        // Submit reply
        window.submitReply = async function() {
            const content = document.getElementById('replyContent').value.trim();
            const isSolution = document.getElementById('markAsSolution').checked;

            if (!content) {
                modalService.showNotification('Please write a reply', 'warning');
                return;
            }

            try {
                const response = await fetch(`http://localhost:5000/api/v1/discussions/${currentDiscussion.id}/replies`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${localStorage.getItem('codesmart_token') || localStorage.getItem('token')}`
                    },
                    body: JSON.stringify({ content, is_solution: isSolution })
                });
                const data = await response.json();
                if (data.success) {
                    modalService.showNotification('Reply added successfully', 'success');
                    showDiscussionDetail(currentDiscussion.id);
                } else {
                    modalService.showNotification(data.message || 'Error adding reply', 'error');
                }
            } catch (error) {
                console.error('Error adding reply:', error);
                modalService.showNotification('Error adding reply', 'error');
            }
        };

